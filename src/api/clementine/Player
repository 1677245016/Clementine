#ifndef CLEMENTINE_PLAYER_H
#define CLEMENTINE_PLAYER_H

#include <boost/noncopyable.hpp>
#include <boost/scoped_ptr.hpp>
#include <boost/shared_ptr.hpp>

namespace clementine {

class PlayerDelegate;
class PlayerPrivate;

class Player : boost::noncopyable {
public:
  enum State {
    State_Stopped = 0,
    State_Playing,
    State_Paused
  };

  int GetVolumePercent() const;
  int GetPositionSeconds() const;
  int64_t GetPositionNanoseconds() const;
  State GetState() const;

  void Play();
  void Pause();
  void PlayPause();
  void Stop();
  void Next();
  void Previous();

  void SetVolumePercent(int percentage);
  void ToggleMute();
  void SeekToSeconds(int seconds);
  void SeekToNanoseconds(int64_t nanoseconds);
  void SetState(State state);

  void ShowOSD();

  // Register a delegate to receive notifications when the player's state
  // changes.
  void RegisterDelegate(boost::shared_ptr<PlayerDelegate> delegate);
  void UnregisterDelegate(boost::shared_ptr<PlayerDelegate> delegate);

  // Used internally by Clementine
  Player(void* app);
  ~Player();

  void UnregisterAllDelegates();

private:
  boost::scoped_ptr<PlayerPrivate> d;
};

typedef boost::shared_ptr<Player> PlayerPtr;

} // namespace clementine

#endif // CLEMENTINE_PLAYER_H
