#ifndef CLEMENTINE_USERINTERFACE_H
#define CLEMENTINE_USERINTERFACE_H

#include <QString>

#include <boost/noncopyable.hpp>
#include <boost/scoped_ptr.hpp>
#include <boost/shared_ptr.hpp>

namespace clementine {

class Action;

class UserInterface : boost::noncopyable {
public:
  bool AddMenuItem(const QString& location, boost::shared_ptr<Action> action);
  void RemoveMenuItem(boost::shared_ptr<Action> action);

  // Used internally by Clementine
  UserInterface(void* app);
  ~UserInterface();

  void RemoveAll();

private:
  struct Private;
  boost::scoped_ptr<Private> d;
};

typedef boost::shared_ptr<UserInterface> UserInterfacePtr;

} // namespace clementine

#endif // CLEMENTINE_USERINTERFACE_H
