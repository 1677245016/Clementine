#ifndef CLEMENTINE_ACTION_H
#define CLEMENTINE_ACTION_H

#include <QString>

#include <boost/noncopyable.hpp>
#include <boost/scoped_ptr.hpp>
#include <boost/shared_ptr.hpp>

namespace clementine {

class ActionPrivate;

class Action : boost::noncopyable {
public:
  Action(const QString& text);
  Action(const QString& icon, const QString& text);
  virtual ~Action();

  bool IsEnabled() const;
  QString Text() const;
  QString Icon() const;

  void SetEnabled(bool enabled);
  void SetText(const QString& text);
  void SetIcon(const QString& icon);

  virtual void Triggered();

  // Used internally by Clementine
  bool Attach(void* data);
  void Unattach();

private:
  boost::scoped_ptr<ActionPrivate> d;
};

typedef boost::shared_ptr<Action> ActionPtr;

} // namespace clementine

#endif // CLEMENTINE_ACTION_H
